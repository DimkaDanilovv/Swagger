openapi: 3.0.0
info:
  title: Автомойка
  version: 0.0.1
servers:
  - url: http://localhost:8080/api/v1/
    description: Dev server
paths:
  /orders:
    get:
      summary: Метод получения списка записей
      tags:
        - Orders
      operationId: getAllOrders
      responses:
        '200':
          description: Успешный ответ со списком записей
          content:
            application/json:
              schema:
                  $ref: '#/components/schemas/Order'
        '400':
          description: Ошибка запроса
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
                
    post:                                                                 
      summary: Создание записи
      tags:
        - Orders
      operationId: createOrder    
      requestBody:
        required: true
        content:
        application/json:
            schema:
                $ref: '#/components/schemas/Order'
      responses:
        '200':
          description: Успешный ответ с созданием записи
          content:
            application/json:
              schema:
                  $ref: '#/components/schemas/Order'
        '400':
          description: Ошибка запроса
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
  /orders/{order_id}:                                              
    get:                                                                 
      summary: Метод получения списка записей по идентификатору
      tags:
        - Orders
      operationId: getOrderById
      parameters:
          - name: order_id
            in: path
            required: true
            description: Идентификатор записи
            schema:
                type: string
            example: 1
      responses:
        '200':
          description: Успешный ответ с одной записью
          content:
            application/json:
              schema:
                  $ref: '#/components/schemas/Order'
        '400':
          description: Ошибка запроса
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'                
                
    delete:
        summary: Метод удаления записи по идентификатору
      tags:
        - Orders
        operationId: deleteOrderById
         parameters:
          - name: order_id
            in: path
            required: true
            description: Идентификатор записи
            schema:
                type: string
            example: 1
      
components:
  schemas:
    Order:
      type: object
      required:
        - name
        - phone
        - car_brand
        - service_type
        - recording_time
        - box_number
        - worker_id
        - discount
        - created_at
        - status
      properties:
        order_id:
          type: string
          example: 1
        name:
          type: string
          example: Alex
        phone:
          type: string
          example: '+7 (999) 999 99-99'
        car_brand:
          type: string
          example: Reno Logan
        service_type:
          type: string
          example: Уборка Кузова
        recording_time:
          type: string
          format: date-time
          example: 2025-01-20T15:00:00+01:00
        box_number:
          type: string
          example: 1
        worker_id:
          type: string
          example: 2
        discount:
          type: boolean
          example: true
        created_at:
          type: string
          format: date-time
          example: 2025-01-20T15:00:00+01:00
        status:
          type: string
          enum:
            - active
            - waiting
            - completed
          description: Статус Записи
    Error:
      type: object
      required:
        - code
        - message
      properties:
        code:
          type: integer
          example: 400
        message:
          type: string
          example: "Беда"
