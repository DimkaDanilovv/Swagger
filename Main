openapi: 3.0.0
info:
  title: Автомойка
  version: 0.0.1
servers:
  - url: http://localhost:8080/api/v1/
    description: Dev server
paths:
  /orders:
      get:
        summary: Метод получения списка записей
        tags:
        - Orders
        operationId: getAllOrders
        responses:
            '200':
            description: Успешный ответ со списком записей
            content:
              application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Orders'
            'default':
            description: Беда бедовая
            content:
              application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Error'  
              
              
components:
  schemas:
    Order:
      type: object
      required:
        - name
        - phone
        - car_brand
        - service_type
        - recording_time
        - box_number
        - worker_id
        - discount
        - created_at
        - status
      properties:
      order_id:
          type: string
        example: 1
        name:
          type: string
          example: Alex
        phone:
          type: string
          example: +7 (999) 999 99-99
        car_brand:
          type: string
          example: Reno Logan
        service_type:
          type: string
          example: Уборка Кузова
        recording_time:
          type: string
          format: 2025-01-20T15:00:00+1
        box_number:
          type: string
          example: 1
        worker_id:
          type: string
          example: 2
        discount:
          type: string
          example: 4200
        created_at:
          type: string
          format: 2025-01-20T15:00:00+1
        status:
          type: string
          enum:
          - active
          - waiting
          - completed
          description: Статус Записи
        Orders:
        type: array
        items:
        $ref: "#/components/schemas/Order"
        
    Error:
        type: object
        required:
        - code
        - message
        properties:
            code:
              type: integer
            message:
              type: string
